<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Branch.Add_Staff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/staff_name"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center"
            android:hint="Staff Name"
            android:inputType="textPersonName"
            android:layout_marginTop="50dp"/>

        <EditText
            android:id="@+id/staff_phn_no"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center"
            android:hint="Phone no"
            android:inputType="textPersonName"
            android:layout_marginTop="20dp" />
        <EditText
            android:id="@+id/email_staff"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center"
            android:hint="Email"
            android:inputType="textPersonName"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/staff_username"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/staff_passwrd"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginTop="20dp" />
        <EditText
            android:id="@+id/staff_comfipasswrd"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center"
            android:hint="Comfirm Password"
            android:inputType="textPassword"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/staff_add"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add staff"
            android:gravity="center"
            android:layout_marginTop="20dp" />
    </LinearLayout>
    </ScrollView>


</RelativeLayout>